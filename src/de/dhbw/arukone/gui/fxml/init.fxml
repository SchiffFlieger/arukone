               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="chooseBoard" prefHeight="25.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox prefHeight="37.0" prefWidth="708.0">
         <children>
            <CheckBox fx:id="showSolving" mnemonicParsing="false" onAction="#toggleSolvingOptions" selected="true" text="show gui while solving">
